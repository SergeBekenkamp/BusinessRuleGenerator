<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	<servlet>
        <servlet-name>GeneratorController</servlet-name>
        <servlet-class>controllers.GeneratorController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GeneratorController</servlet-name>
        <url-pattern>/generator</url-pattern>
    </servlet-mapping>
	<servlet>
        <servlet-name>SelectorController</servlet-name>
        <servlet-class>controllers.SelectorController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SelectorController</servlet-name>
        <url-pattern>/selector</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>InfoController</servlet-name>
        <servlet-class>controllers.InfoController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InfoController</servlet-name>
        <url-pattern>/info</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>

